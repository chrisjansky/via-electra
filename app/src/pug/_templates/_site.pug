  body
    include ../_mixins/_features
    include ../_mixins/_hud
    include ../_mixins/_footer
    include ../_mixins/_menu
    include ../_mixins/_partners
    include ../_mixins/_people
    include ../_mixins/_reach
    include ../_mixins/_work-item

    #barba-wrapper
      +hud
      +menu

      .barba-container
        block template-body
          p Basic template.

