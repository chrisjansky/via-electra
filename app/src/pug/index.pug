extends _templates/_site

block template-body
  +hud

  +menu

  .m-split--full
    .m-split__content--white
      h1.m-split__title(data-grep) Moderní automatizace a elektroinstalace pro Váš domov i práci — komplexně a ve 3D

      nav.c-anchors
        a.c-anchors__arrow(href="#intro")
          include ../static/svg/arrow-down.svg
        ul.c-anchors__list
          -
            var anchors = [
              {
                "name": "Služby",
                "href": "#services"
              },
              {
                "name": "Reference",
                "href": "#work"
              },
              {
                "name": "O nás",
                "href": "#about"
              },
              {
                "name": "Kontakt",
                "href": "#contact"
              }
            ]
          each instance in anchors
            li.c-anchors__item
              a.c-anchors__link(href=instance.href)= instance.name

    .m-split__image(style="background-image: url('src/static/img/work/kocianka-6.jpg')")

  #intro.m-hilite
    .m-hilite__wrap
      h2.m-hilite__title(data-grep) Jsme profesionálové v oboru automatizace a elektro s více než dvacetiletými zkušenostmi.
      ul.m-facts
        -
          var facts = [
            {
              "digit": "7",
              "label": "odborníků v našem týmu"
            },
            {
              "digit": "20+",
              "label": "let působení v oboru"
            },
            {
              "digit": "3D",
              "label": "řešení celého projektu"
            },
            {
              "digit": "4",
              "label": "české a slovenské pobočky"
            }
          ]
        each instance in facts
          li.m-facts__item
            strong.m-facts__digit= instance.digit
            span.m-facts__label(data-grep)= instance.label

  #services.m-services
    .m-services__wrap
      h3.m-services__title Naše specializace

      .m-services__list
        -
          var services = [
            {
              "image": "service-1.jpg",
              "name": "Projekce",
              "text": "Příprava kompletní projekční dokumentace elektro systému budovy.",
              "button": "Více o projekci"
            },
            {
              "image": "service-2.jpg",
              "name": "Realizace",
              "text": "BIM je potřeba vnímat především jako proces a při přechodu na BIM je tedy zásadní si uvědomit.",
              "button": "Více o realizaci"
            },
            {
              "image": "service-3.jpg",
              "name": "Stavební engineering",
              "text": "Od konzultace a výběru dodavatelů až po technický i autorský dozor pro elektronickou část stavby.",
              "button": "Více o engineeringu"
            }
          ]
        each instance in services
          a(href="service.html").m-services__item
            img.m-services__image(src="src/static/img/" + instance.image, alt=instance.name)
            h4.m-services__name= instance.name
            p.m-services__text= instance.text
            span.m-services__button= instance.button

  #work.m-work
    h3.m-work__title Vybrané reference

    .m-work__list
      each instance in works
        +workItem(instance)

  #about.m-blurb--light
    .m-blurb__wrap
      h3.m-blurb__title O nás

      strong.m-blurb__claim(data-grep) Působíme v největších městech České republiky i Slovenska a do roku 2020 se chceme stát dodavatelem číslo 1 na obou trzích.

      .c-partners
        h4.c-partners__title Partneři
        ul.c-partners__list
          li.c-partners__item--abb: include ../static/svg/partner-abb.svg
          li.c-partners__item--cisco: include ../static/svg/partner-cisco.svg
          li.c-partners__item--viasound: include ../static/svg/partner-viasound.svg
          li.c-partners__item--jablotron: include ../static/svg/partner-jablotron.svg
          li.c-partners__item--eissound: include ../static/svg/partner-eissound.svg

      a.m-blurb__button(href="about.html") Poznejte nás blíže

  .m-hiring
    .m-hiring__image(style="background-image: url('src/static/img/img-2.jpg')")
    .m-hiring__content
      .m-hiring__wrap
        h4.m-hiring__strong Pracujte u nás
        p.m-hiring__text Čas od času rozšiřujeme náš tým. Možná hledáme právě Vás.

        a.m-hiring__button(href="about.html#careers") Kariéra

  +reach("homepage")

  .m-pins
    .m-pins__image(style="background-image: url('src/static/img/img-offices.jpg')")
    .m-pins__content
      .m-pins__wrap
        h4.m-pins__strong Navštivte nás
        p.m-pins__text(data-grep) Působíme na českém i slovenském trhu

        a.m-pins__button(href="contact.html#offices") Naše pobočky

  +footer
