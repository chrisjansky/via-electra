mixin menu
  nav.c-menu
    .c-menu__content
      button.c-menu__close(type="button", data-toggle="menu")
        include ../../static/svg/icon-close.svg

      ul.c-menu__list
        -
          var menu = [
            {
              "title": "Služby",
              "href": "index.html#services",
              "toggle": "menu"
            },
            {
              "title": "Reference",
              "href": "index.html#work",
              "toggle": "menu"
            },
            {
              "title": "O nás",
              "href": "about.html"
            },
            {
              "title": "Kontakt",
              "href": "contact.html"
            }
          ]
        each instance in menu
          li.c-menu__item
            a.c-menu__link(href=instance.href, data-toggle= instance.toggle || null)= instance.title

      a.c-menu__switch(href="javascript:") English

    span.c-menu__frame(data-toggle="menu")
